<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.ex_wanzhipeng001.demo_java.views.ViewsMainActivity">

    <Button
        android:text="AS_templateActivity"
        android:id="@+id/btn_templateActivity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.example.ex_wanzhipeng001.demo_java.views.customviews.RectBgTextView
        android:text="RectBgTextView"
        android:gravity="center"
        android:textSize="20sp"
        android:layout_width="200dp"
        android:layout_height="50dp"/>

    <com.example.ex_wanzhipeng001.demo_java.views.customviews.ShaderTextView
        android:layout_marginTop="10dp"
        android:text="ShaderTextView"
        android:textSize="30sp"
        android:layout_width="300dp"
        android:layout_height="50dp"/>


    <Button
        android:text="TopBar"
        android:id="@+id/btn_topbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="CircleProgressView"
        android:id="@+id/btn_circleProgressView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <Button
        android:text="VolumeView"
        android:id="@+id/btn_volumeView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="ScrollView"
        android:id="@+id/btn_scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="SearchView"
        android:id="@+id/btn_searchView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:text="DrawerLayout"
        android:id="@+id/btn_drawerLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
